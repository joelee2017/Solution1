<Window x:Class="WpfApp1._3_1.WPF_ControlsUI.Window_ViewBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1._3_1.WPF_ControlsUI"
        mc:Ignorable="d"
        Title="Window_ViewBox" Height="300" Width="300">
    <Viewbox Stretch="Fill">
        <Grid>
            <Calendar HorizontalAlignment="Left" VerticalAlignment="Top">
                <Calendar.Background>
                    <RadialGradientBrush>
                        <GradientStop Color="White"/>
                        <GradientStop Color="#FFECF0F4" Offset="0.16"/>
                        <GradientStop Color="#FFFCFCFD" Offset="0.003"/>
                        <GradientStop Color="#FFBD3B3B" Offset="1"/>
                    </RadialGradientBrush>
                </Calendar.Background>
            </Calendar>
        </Grid>
    </Viewbox>
</Window>
